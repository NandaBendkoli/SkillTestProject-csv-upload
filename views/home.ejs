<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>CSV Upload</title>
    
</head>



    <!-- home.ejs -->

<h1>Uploaded Files</h1>

<table class="file-table">
    <thead>
      <tr>
        <th>Filename</th>
        <th> </th>
        <th> </th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% files.forEach(function(file) { %>
        <tr>
          <td><%= file.filename %></td>
          <td> </td>
          <td> </td>
          <td>
            <a class="file-link" href="/csv/<%= file._id %>">View</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
  <div class="container mt-5">
        <h1 class="text-center mb-4">CSV Upload</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="csvFile">Select a CSV file to upload:</label>
                        <input type="file" class="file-input" id="csvFile" name="csv" accept=".csv">
                    </div><br>
                    <button type="submit" class="upload-button">Upload</button>
                </form>
            </div>
        </div>
    </div>

    <script src="scripts.js"></script> <!-- Link to your custom JavaScript file -->
</body>

</html>
